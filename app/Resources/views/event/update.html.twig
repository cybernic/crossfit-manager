{% extends 'adminlte.base.html.twig' %}

{% block avanzu_page_title %}Editar Evento{% endblock %}
{% block avanzu_page_subtitle %}{% endblock %}

{% block avanzu_head %}
    {{ parent() }}

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.min.css">
{% endblock %}

{% block avanzu_javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function() {
            $(".js-datepicker input.timepicker").datepicker({
                format: 'yyyy-mm-dd',
                weekStart: 1,
                language: "es"
            });
        });
    </script>
{% endblock %}

{% block custom_page_content %}
    <div class="row">
        <div class="col-sm-12 col-md-9 col-lg-6">
            <div class="box box-primary">
                <div class="box-body">
                    {{ form_start(eventForm) }}

                    {{ form_row(eventForm.program) }}
                    {{ form_row(eventForm.user) }}
                    <div class="row">
                        <div class="col-md-8 col-lg-8">
                            {{ form_row(eventForm.startsAt) }}
                        </div>
                        <div class="col-md-4 col-lg-4">
                            {{ form_row(eventForm.duration) }}
                        </div>
                        <div class="col-xs-12 hidden">
                            {{ form_row(eventForm.days) }}
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success" formnovalidate>Guardar evento</button>
                    {{ form_end(eventForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
